<div class= "container">
<div class= "child">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class='full-width'>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'mobile text-input form-control form-control-lg', placeholder:'Email' %>
  </div>
  <br/>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", class:'mobile text-input form-control form-control-lg', placeholder:'Password' %>
  </div>
  <br/>
</div>
  <div class="actions">
    <%= f.submit "Log in", class:'btn btn-outline-primary mx-auto' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>